<%- include('../partials/header') %>
    <%- include('../partials/navbar') %>

        <main class="auth-main">
            <div class="auth-card">
                <div class="auth-logo">
                    <span class="auth-logo-icon">ðŸ“¸</span>
                    <h1 class="auth-logo-text">Pixgram</h1>
                    <p class="auth-tagline">Sign in to see photos from your friends.</p>
                </div>

                <form action="/login" method="POST" class="auth-form" novalidate>

                    <div class="form-group">
                        <input type="email" name="email" class="form-input" placeholder="Email address"
                            autocomplete="email" required />
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" class="form-input" placeholder="Password"
                            autocomplete="current-password" required />
                    </div>

                    <button type="submit" class="btn-submit">Sign In</button>
                </form>

                <div class="auth-switch">
                    Don't have an account? <a href="/register">Sign up</a>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>