<!-- Flash Messages -->
<% if (success && success.length> 0) { %>
    <div class="flash flash-success">
        <span>
            <%= success[0] %>
        </span>
        <button onclick="this.parentElement.remove()" class="flash-close">x</button>
    </div>
    <% } %>
        <% if (error && error.length> 0) { %>
            <div class="flash flash-error">
                <span>
                    <%= error[0] %>
                </span>
                <button onclick="this.parentElement.remove()" class="flash-close">x</button>
            </div>
            <% } %>