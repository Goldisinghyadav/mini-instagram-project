# Environment Variables — copy this to .env and fill in your values

# MongoDB connection string
# Atlas:  mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/pixgram
# Local:  mongodb://localhost:27017/pixgram
MONGO_URI=mongodb://localhost:27017/pixgram

# JWT secret key — change this to a long random string in production
JWT_SECRET=your_super_secret_key_change_me

# Port the server runs on
PORT=3000

# Session secret (for flash messages)
SESSION_SECRET=another_secret_key_change_me
